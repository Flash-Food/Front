<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.senac.flashfood">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.PurchaseDetailsActivity"></activity>
        <activity android:name=".activities.PurchasesActivity" />
        <activity android:name=".activities.PaymentFinishActivity" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.ShopCartActivity" />
        <activity android:name=".activities.RestaurantMenuActivity" />
        <activity android:name=".activities.ProductInfoActivity" />
        <activity
            android:name=".activities.BottomNavigationActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>